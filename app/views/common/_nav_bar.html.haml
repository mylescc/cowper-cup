.ui.fixed.menu
  .ui.page.grid
    .column
      = link_to 'Tournament Manager', root_path, class: 'item header' 
      = link_to nav_icon('Tournaments', 'sitemap'), tournaments_path, class: nav_active_item('tournaments')
      -#= link_to nav_icon('Matches', 'trophy'), matches_path, class: nav_active_item('matches')
      = link_to nav_icon('Players', 'users'), users_path, class: nav_active_item( 'users')
      .right.menu
        - if signed_in?
          = link_to "<i class=\"icon user\"></i> #{current_user.firstname} #{current_user.lastname}".html_safe, user_path(current_user), class: 'item'
          = link_to "Logout <i class=\"icon sign out\"></i>".html_safe, logout_path, class: 'item'
        - else 
          = link_to 'Sign up', sign_up_path, class: 'item'
          = link_to 'Login', sign_in_path, class: 'item'


